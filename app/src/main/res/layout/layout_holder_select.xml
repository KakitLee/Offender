<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="@dimen/px_500"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/tv_longitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px_44"
            android:layout_marginRight="@dimen/px_44"
            android:inputType="numberDecimal"
            android:hint="Longitude"/>
        <EditText
            android:id="@+id/tv_latitude"
            android:layout_below="@id/tv_longitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px_44"
            android:layout_marginRight="@dimen/px_44"
            android:inputType="numberDecimal"
            android:hint="Latitude"/>
        <EditText
            android:id="@+id/tv_radius"
            android:layout_below="@id/tv_latitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px_44"
            android:layout_marginRight="@dimen/px_44"
            android:inputType="numberDecimal"
            android:hint="Radius in KM"/>
        <Button
            android:id="@+id/btn_search_Clear"
            android:layout_below="@id/search_view_search"
            android:layout_marginTop="@dimen/px_20"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:text="Clear"
            android:layout_marginLeft="@dimen/px_44"
            android:layout_marginRight="@dimen/px_44"
            android:scrollbars="none" />

        <Button
            android:id="@+id/btn_search_Search"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_search_Clear"
            android:layout_marginLeft="@dimen/px_44"
            android:layout_marginRight="@dimen/px_44"
            android:text="Search"
            android:scrollbars="none" />
    </LinearLayout>

</LinearLayout>