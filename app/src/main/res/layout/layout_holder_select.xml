        <!--android:layout_marginTop="15dp"-->
        <!--android:scaleType="centerCrop"-->
        <!--android:id="@+id/place_info"-->
        <!--android:src="@drawable/ic_info_black_24dp"/>-->


    </RelativeLayout>
</RelativeLayout>