<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">


    <!--<include-->
        <!--layout="@layout/app_bar_upload"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent" />-->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/relative_upload"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            />
        <Button
            android:id="@+id/btn_delete"
            android:layout_above="@id/btn_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:onClick="deleteFiles"
            android:text="@string/delete_files" />

        <Button
            android:id="@+id/btn_voice"
            android:layout_above="@id/tv_folder_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:onClick="pickVoiceFolder"
            android:text="@string/select_folder_voice" />

        <TextView
            android:id="@+id/tv_folder_voice"
            android:layout_above="@id/btn_folder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="@string/folder_not_selected" />

        <Button
            android:id="@+id/btn_folder"
            android:layout_above="@id/tv_folder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:onClick="pickFolder"
            android:text="@string/select_folder_image" />

        <TextView
            android:id="@+id/tv_folder"
            android:layout_above="@id/btn_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="@string/folder_not_selected" />

        <Button
            android:id="@+id/btn_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:onClick="pickFile"
            android:padding="20dp"
            android:layout_marginTop="25dp"
            android:layout_centerInParent="true"
            android:text="@string/select_file_data" />

        <TextView
            android:id="@+id/tv_file"
            android:layout_below="@id/btn_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="@string/file_not_selected" />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_below="@id/tv_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:padding="20dp"
            android:layout_marginTop="25dp"
            android:text="@string/comfirm_upload" />

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_upload"
        app:menu="@menu/activity_upload_drawer" />


</android.support.v4.widget.DrawerLayout>
