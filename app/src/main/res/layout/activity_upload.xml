    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/relative_upload"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            />
        <!--<Button-->
            <!--android:id="@+id/btn_delete"-->
            <!--android:layout_above="@id/btn_voice"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:onClick="deleteFiles"-->
            <!--android:text="@string/delete_files" />-->
        <LinearLayout
            android:layout_marginTop="80dp"
            android:layout_width="match_parent" android:layout_height="90dp"
            android:padding="4dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:orientation="horizontal" android:background="#fff"  android:gravity="left"  >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center" >
                <Button
                    android:id="@+id/btn_voice"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:onClick="pickRecordFolder"
                    android:text="@string/select_folder_record" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="6dp"
                android:layout_height="match_parent"
                android:gravity="center" >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="Record Folder" />
                <TextView
                    android:id="@+id/tv_folder_record"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_alignParentBottom="true"
                    android:text="Folder Unspecified" />
            </RelativeLayout>
        </LinearLayout>


        <!--<Button-->
            <!--android:id="@+id/btn_voice"-->
            <!--android:layout_above="@id/tv_folder_record"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:onClick="pickRecordFolder"-->
            <!--android:text="@string/select_folder_record" />-->

        <!--<TextView-->
            <!--android:id="@+id/tv_folder_record"-->
            <!--android:layout_above="@id/btn_folder"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_marginTop="5dp"-->
            <!--android:layout_marginLeft="12dp"-->
            <!--android:layout_marginRight="12dp"-->
            <!--android:text="@string/folder_not_selected" />-->

        <Button
            android:id="@+id/btn_folder"
            android:layout_above="@id/tv_folder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:onClick="pickFolder"
            android:text="@string/select_folder_image" />

        <TextView
            android:id="@+id/tv_folder"
            android:layout_above="@id/btn_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="@string/folder_not_selected" />

        <Button
            android:id="@+id/btn_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:onClick="pickFile"
            android:padding="20dp"
            android:layout_marginTop="25dp"
            android:layout_centerInParent="true"
            android:text="@string/select_file_data" />

        <TextView
            android:id="@+id/tv_file"
            android:layout_below="@id/btn_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="@string/file_not_selected" />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_below="@id/tv_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:padding="20dp"
            android:layout_marginTop="25dp"
            android:text="@string/comfirm_upload" />

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_upload"
        app:menu="@menu/activity_upload_drawer" />


</android.support.v4.widget.DrawerLayout>
